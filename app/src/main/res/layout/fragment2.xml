<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mSmartRefreshLayout"
    android:layout_height="match_parent"
    app:srlPrimaryColor="?attr/colorPrimary">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/mBGABanner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:fitsSystemWindows="true"
                app:banner_isNumberIndicator="true"
                app:banner_indicatorGravity="right"
                app:banner_numberIndicatorTextSize="12sp"
                app:banner_pointAutoPlayAble="true"
                app:banner_pointAutoPlayInterval="2000"
                app:banner_pointContainerBackground="@color/black_50"
                app:banner_tipTextColor="@color/white"
                app:banner_tipTextSize="12sp"
                app:banner_transitionEffect="depth" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>